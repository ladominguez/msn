---
import Layout from "../layouts/Generic.astro";
---

<!doctype html>
<Layout
  title="Datos"
  description="Lorem ipsum dolor sit amet"
  pubDate=""
  heroImage=""
>
  <div class="container">
    <div class="card">
      <calendar-date months="2">
        <div class="grid">
          <calendar-month></calendar-month>
          <calendar-month offset="1"></calendar-month>
        </div>
      </calendar-date>
    </div>
  </div>

  <script is:inline type="module" src="https://unpkg.com/cally"></script>

  <style>
    body {
      background-color: #f8f9fa;
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }

    .container {
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .content {
      background-color: #ffffff;
      padding: 40px;
      border-radius: 10px;
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
      text-align: center;
      justify-content: center;
      width: 90%;
      max-width: 500px;
    }

    .grid {
      display: flex;
      gap: 1em;
      justify-content: center;
      flex-wrap: wrap;
    }
  </style>
</Layout>
